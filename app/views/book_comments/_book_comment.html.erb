<table>
 <tbody>
  <% book.book_comments.each do |book_comment| %>
   <tr>
     <td>
       <%= image_tag book.user.get_profile_image, size:"100x100" %><br>
       <%= link_to book_comment.user.name, remote: true %> <!--showページへのpathいるかも-->
     </td>
     <td><%= book_comment.comment %></td>
     <td>
      <% if book_comment.user == current_user %>
       <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" , remote: true%><!--ここまで一塊-->
      <% end %>
     </td>
  <% end %>
    </tr>
 </tbody>
</table>

<!--link_toにremote: trueいるかも-->